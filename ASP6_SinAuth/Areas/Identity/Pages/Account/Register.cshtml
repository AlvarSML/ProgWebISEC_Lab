@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container row">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="col-md-4">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            

        </div>

        <div class="col-md-4">
            <h2>Personal data</h2
            <hr />

            <div class="form-floating">
            <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Name"></label>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-floating">
            <input asp-for="Input.Age" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Age"></label>
            <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>

            <div class="form-floating">
            <input asp-for="Input.Sex" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Sex"></label>
            <span asp-validation-for="Input.Sex" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>

        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
