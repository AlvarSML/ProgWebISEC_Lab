@using static ASP6_SinAuth.Controllers.TestsController

@model TestCreation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Test</h4>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">

            <input type="hidden" asp-for="userId" />
            <input type="hidden" asp-for="typeId" />
            <input type="hidden" asp-for="labId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="testDate" class="control-label">Desired test date *</label>
                <input name="testDate" asp-format="{0:yyyy-MM-ddTHH:mm}" asp-for="testDate" class="form-control" />
                <span asp-validation-for="testDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="comment" class="control-label">Annotations</label>
                <input asp-for="comment" class="form-control" />
                <span asp-validation-for="comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

