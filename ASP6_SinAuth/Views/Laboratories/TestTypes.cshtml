@using ASP6_SinAuth.Controllers
@model LaboratoryTestTypes

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Laboratory</h4>

<div clas="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (TestType tt in Model.ExistingTypes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => tt.type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => tt.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => tt.price)
                    </td>
                    <td>
                        <a asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
<div class="row">
    <form asp-action="TestTypes" class="row">
        <input type="hidden" asp-for="LabId"/>
        <div class="form-group col-md-3">
            <label asp-for="type" class="control-label"></label>
            <input asp-for="type" class="form-control" />
            <span asp-validation-for="type" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="description" class="control-label"></label>
            <input asp-for="description" class="form-control" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="price" class="control-label"></label>
            <input asp-for="price" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group mt-3">
                <input type="submit" value="Add type" class="btn btn-primary" />
        </div>
    </form>
</div>